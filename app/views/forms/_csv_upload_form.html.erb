<h2>Clearance Batches From a File</h2>

<%= form_tag(clearance_batches_path, multipart: true, class: 'form-inline', role: 'form') do %>
  <div class="form-group">
    <%= hidden_field_tag "csv_file", true %>
    <%= file_field_tag 'csv_batch_file', class: 'csv-upload form-control'%>
  </div>
  <%= button_tag 'upload batch file', id: "submit", class: 'btn btn-primary', data: { disable_with: "Submitting..." } %>
<% end %>

<a href="/?loose=true" class="switch btn btn-success">Switch to Id Input</a>
